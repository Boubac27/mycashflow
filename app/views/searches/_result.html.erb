<div class="appartment">
  <div class="appartment-image">
    <img src="<%= result[:image] %>" alt="">
  </div>
  <div class="appartment-infos">
    <div class="metrics">
      <div class="metric main">
        <h2 class="green"><%= result[:returns].round(2) %> %</h2>
        <label>Rendement brut</label>
      </div>
      <div class="metric">
        <h2>412 €</h2>
        <label>Loyer potentiel</label>
      </div>
    </div>

    <hr>

    <h4><%= number_to_currency(result[:price], format: "%n %u", unit: "€", delimiter: " ", precision: 0) %></h4>
    <h5><%= result[:subject] %></h5>
    <p><%= pluralize(result[:rooms], "chambre") %>, <%= result[:surface] %>m²</p>

    <% scraped = "urlscrap=#{result[:url]}&urlimage=#{result[:image]}&price=#{result[:price]}&rendement=#{result[:returns]}&rooms=#{result[:rooms]}&surface=#{result[:surface]}&user_id=#{current_user.id}&lat=#{result[:lat]}&long=#{result[:lng]}&city=#{result[:city]}&zipcode=#{result[:zipcode]}" %>
    <%= form_tag(favorites_path, method: :post, remote: true) do %>
      <%= hidden_field_tag :scraped, scraped %>
      <%= submit_tag "Select", class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
