<div class="main-container-selection">
  <div class="row">
    <div class="col-xs-12 col-md-6 rowcards">

      <div class="favselection">

        <h3 class="fav-title">Ma selection</h>
        <% @favorites.each do |f| %>
          <div class="favcard">

            <div class="favrend">
              <p>Rendement potentiel <%= f.rendement.round(2)%>%</p>
            </div>
            <div class="favprice">
              <p>Prix de vente: <%= number_to_currency(f.price, unit: "â‚¬", precision: 0, delimiter: " ", format: "%n %u")%></p>
            </div>

            <div class="favsurface">
              <p>Surface :<%= f.surface%> m2 </p>
            </div>

            <div class="favroom">
             <p> <%= pluralize(f.rooms, "pieces")%> </p>
            </div>

            <div class="favcity">
              <p> <%= f.city%> </p>
            </div>

            <div>
              <%= link_to '<i class="fas fa-eye faveyes"></i>'.html_safe, favorite_path(f)%>
            </div>

            <div>
              <%= link_to '<i class="fas fa-trash-alt favtrash"></i>'.html_safe, favorite_path(f), method: :delete, data: {:confirm => 'Confirmez la suppression ?'} %>

            </div>

            <div>
              <% if f.urlimage.present? %>
               <%= image_tag f.urlimage, class: "favimage"%>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
    <div class="col-xs-12 col-md-6 sticky">
      <div
        id="map"
        data-markers=" <%= @markers.to_json %>"
      ></div>

    </div>
  </div>
</div>






